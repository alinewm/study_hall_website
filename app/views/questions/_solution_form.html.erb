<%= form_for(@solution) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div><%= hidden_field_tag :question_id, @question.id %></div>
        <div class="field">
          <%= f.text_area :content, placeholder: "Responda aqui...", class:"form-control" %>
        </div>
     <br>
        <%= f.submit "Postar", class: "btn btn-primary" %>
 <% end %>
