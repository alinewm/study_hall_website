<div class="container">
  <div class="page-header">
    <h1>Pergunta</h1>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="well">
        <%= @question.content %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="well">
        <%= image_tag @question.picture.url if @question.picture? %>
      </div>
      <h4><%= @question.user.name %> - Postada <%= time_ago_in_words(@question.created_at) %> atrás</h4>
    </div>
    <div class="col-md-2"></div>
  </div>
    <br>
<div class="page-header">
  <h2>Solução</h2>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= render 'solutions/solution' %>
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= render 'questions/solution_form' if current_user.admin? %>
  </div>
  <div class="col-md-2"></div>
</div>
</div>